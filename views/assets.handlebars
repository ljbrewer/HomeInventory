<div class="row">
  <h1>My Assets</h1>
  <div class="col-md-6">
    {{#each assets as |asset| }}
    <div class="section">
      <h4>{{item}}</h4>
      <p>Description: {{description}}</p>
      <p>Date Purchased: {{format_date purchasedOn}}</p>
      {{#if price}}
      <p>Price<span for="img" aria-label="money">ðŸ’²</span>
        <span class="dollar-amount">{{format_amount price}}</span>
      </p>
      {{/if}}
      {{#if currentValue}}
      <p>Current Value: <span for="img" aria-label="money">ðŸ’²</span>
        <span class="dollar-amount">{{format_amount currentValue}}</span>
      </p>
      {{/if}}
      {{#if model}}
      <p>Model #: {{model}}</p>
      {{/if}}
      {{#if serialno}}
      <p>Serial #: {{serialno}}</p>
      {{/if}}
      {{#if location_id}}
      <p>Location: {{location_id}}</p>
      {{/if}}
      {{#if state_id}}
      <p>Condition: {{state_id}}</p>
      {{/if}}
      {{#if category_id}}
      <p>Category: {{category_id}}</p>
      {{/if}}
      <button data-id={{id}} class="deleteBtn">DELETE</button>
    </div>
    {{/each}}
  </div>

  <div class="col-md-6">

    <div class="section">
      <h2>Add An Asset</h2>
      <form class="form add-asset-form">
        <div class="form-group">
          <label for="item-add-asset">Item:</label>
          <input class="form-input" type="text" id="item-add-asset" />
        </div>
        <div class="form-group">
          <label for="description-add-asset">Description:</label>
          <input class="form-input" type="text" id="description-add-asset" />
        </div>
        <div class="form-group">
          <label for="purchasedOn-add-asset">Purchase Date:</label>
          <input class="form-input" type="date" id="purchasedOn-add-asset" />
        </div>
        <div class="form-group">
          <label for="location-add-asset">Location:</label>
          <select class="form-input"  id="location-add-asset">
            <option value="Living Room">Living Room</option>
            <option value="Master Bedroom">Master Bedroom</option>
            <option value="Nursury">Nursury</option>
            <option value="Bedroom 1">Bedroom 1</option>
            <option value="Bedroom 2">Bedroom 2</option>
            <option value="Bedroom 3">Bedroom 3</option>
            <option value="Guest Bedroom">Guest Bedroom</option>
            <option value="Dining Room">Dining Room</option> 
            <option value="Kitchen">Kitchen</option>
            <option value="Pantry">Pantry</option>
            <option value="Family Room">Family Room</option>
            <option value="Formal Dining Room">Formal Dining Room</option>
            <option value="Game Room">Game Room</option>            
            <option value="Office">Office</option>
            <option value="Garage">Garage</option>
            <option value="Bathroom">Bathroom</option>
            <option value="Master Bath">Master Bath</option>
            <option value="Half Bath">Half Bath</option>
            <option value="Mud Room">Mud Room</option>
            <option value="Porch">Porch</option>
            <option value="Breakfast Nook">Breakfast Nook</option>
            <option value="In Storage">In Storage</option>
          </select>
        </div>
        <div class="form-group">
          <label for="state-add-asset">Condition of item:</label>
          <select class="form-input"  id="state-add-asset">
            <option value="New">New</option>
            <option value="Fair">Fair</option>
            <option value="Like New">Like New</option>
            <option value="Good">Good</option>
            <option value="Very Good">Very Good</option>
            <option value="Needs Work">Needs Work</option>
            <option value="Poor">Poor</option>            
          </select>
        </div>
        <div class="form-group">
          <label for="price-add-asset">Price:</label>
          <input class="form-input" type="text" id="price-add-asset" />
        </div>
        <div class="form-group">
          <label for="currentvalue-add-asset">Current Value: </label>
          <input class="form-input" type="text" id="currentvalue-add-asset" />
        </div>
        <div class="form-group">
          <label for="model-add-asset">Model #:</label>
          <input class="form-input" type="text" id="model-add-asset" />
        </div>
        <div class="form-group">
          <label for="serialno-add-asset">Serial #:</label>
          <input class="form-input" type="text" id="serialno-add-asset" />
        </div>
        <div class="form-group">
          <label for="Category-add-asset">Category: </label>
          <select class="form-input"  id="category-add-asset">
            <option value="Furniture">Furniture</option>
            <option value="Media Equipment">Media Equipment</option>
            <option value="Sports Equipment">Sports Equipment</option>
            <option value="Yard Equipment">Yard Equipment</option>
            <option value="Kitchen Appliance">Kitchen Appliance</option>
            <option value="Exercise Equipment">Exercise Equipment</option>
            <option value="Instrument">Instrument</option>
            <option value="Computer Equipment">Computer Equipment</option>             
          </select>
        </div>
        <div class="form-group">
          <label for="comment-add-asset">Comment: </label>
          <input class="form-input" type="text" id="comment-add-asset" />
        </div>
        <div class="form-group">
          <button class="btn btn-primary" type="submit">Add Asset</button>
        </div>
      </form>
    </div>
  </div>
  <script src="/js/addAsset.js"></script>
