<h1>Welcome</h1>
{{#if logged_in}}
<div class="row mb-4 Home">
  <div class="col-md-5">
    <h2>User Info
        <a href="/User/{{user.id}}">{{user.first_name}}</a>
    </h2>
    <p>First Name: {{user.first_name}}</p>
    <p>Last Name: {{user.last_name}}</p>
    <p>Email: {{user.email}}</p>
    <p>Primary Phone: {{user.primaryPhone}}</p>
    <p>Cell Phone: {{user.cellPhone}}</p>
    <p>Work Phone: {{user.workPhone}}</p>
  </div>
</div>
{{/if}}

<div class="col-md-6">
  <h2>Update User Info</h2>

  <form class="form add-home-form">
    <div class="form-group">
      <label for="userFirstName-update">First Name:</label>
      <input class="form-input" type="text" id="userFirstName-update" />
    </div>
    <div class="form-group">
      <label for="userLastName-update">Last Name:</label>
      <input class="form-input" type="text" id="userLastName-update" />
    </div>
    <div class="form-group">
      <label for="user-email">Email:</label>
      <input class="form-input" type="text" id="user-email" />
    </div>
    <div class="form-group">
      <label for="user-PrimaryPhone">Primary Phone:</label>
      <input class="form-input" type="text" id="user-PrimaryPhone" />
    </div>
    <div class="form-group">
      <label for="user-CellPhone">Cell Phone:</label>
      <input class="form-input" type="text" id="user-CellPhone" />
    </div>
    <div class="form-group">
      <label for="user-WorkPhone">Work Phone:</label>
      <input class="form-input" type="text" id="user-WorkPhone" />
    </div>
    <div class="form-group">
      <label for="user-Password">Password:</label>
      <input class="form-input" type="text" id="user-Password" />
    </div>
  </form>
</div>
<script src="/js/profile.js"></script>